<h1>Пользователи</h1>
<p><small><em><%= link_to "Новый пользователь", new_user_path %></em></small></p>
<table class="table table-hover table-bordered">
  <thead>
    <tr class="table-dark">
      <th scope="col">Роль</th>
      <th scope="col">Ф.И.О</th>
      <th scope="col">Должность</th>
      <th scope="col">Телефон</th>
      <th scope="col">Почта</th>
      <th scope="col">Группа</th>
      <th scope="col">Статус</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <% if user.super_admin? %>
        <tr class="table-success">
      <% elsif user.admin? %>
        <tr class="table-info">
      <% else %>
        <tr class="table-light">
      <% end %>
          <th><%= user.role %></th>
          <td><%= user.full_name %></td>
          <td><%= user.position %></td>
          <td><%= user.phone %></td>
          <td><%= user.email %></td>
          <td><%= user.group.name %></td>
          <td><%= user.active %></td>
          <td><%= link_to "Показать пользователя", user %></td>
        </tr>
    <% end %>
  </tbody>
</table>
